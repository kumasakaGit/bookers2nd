<h1>Books#index</h1>
<p>Find me in app/views/books/index.html.erb</p>
<%= form_with model: Book.new do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_area :body %>

  <%= f.submit %>
<% end %>
<table>
  <% @books.each do |book| %>
  <tr>
    <td>
      <%= link_to book_path(book.id) do %>
        <%= book.title %>
      <% end %>
    </td>
    <td><%= book.body %></td>
    <td><%= link_to "編集", edit_book_path(book.id) %></td>
  </tr>
  <% end %>
</table>